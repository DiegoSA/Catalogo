<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@drawable/fundo_dialogs"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/limpeza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpeza"
        android:textColor="@android:color/holo_blue_dark" />

    <CheckBox
        android:id="@+id/descartaveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescartÃ¡veis"
        android:textColor="@android:color/holo_blue_dark" />

    <CheckBox
        android:id="@+id/papelaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papelaria"
        android:textColor="@android:color/holo_blue_dark" />

    <CheckBox
        android:id="@+id/confeitaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confeitaria"
        android:textColor="@android:color/holo_blue_dark" />

    <CheckBox
        android:id="@+id/sorveteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorveteria"
        android:textColor="@android:color/holo_blue_dark" />

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="123dp"
            android:layout_height="44dp"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/buttonOkDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@android:string/ok"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>
