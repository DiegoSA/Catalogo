<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diego.catalogo.telas.TelaProdutos">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/fundo_dialogs"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="4dp">

            <RadioGroup
                android:id="@+id/RadioporSegmento"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="25dp">

                <RadioButton
                    android:id="@+id/radioButtonClinica"
                    android:layout_width="380dp"
                    android:layout_height="48dp"
                    android:text="Clinicas/Hospitais"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioButtonHotelaria"
                    android:layout_width="392dp"
                    android:layout_height="48dp"
                    android:layout_weight="0.00"
                    android:text="Hotelaria"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioButtonMercadinho"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Supermercado/Panificadora/Frigorificos"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioButtonRestaurantes"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Restaurantes"
                    android:textSize="18sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/buttonOkSegmento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:text="@android:string/ok"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
